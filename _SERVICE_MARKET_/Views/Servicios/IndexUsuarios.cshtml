
@{
    ViewBag.Title = "Página principal";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Service Market</title>
    <link rel="shortcut icon" href="~/Logos/logo.png" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Css/IndexUsuarios.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=League+Spartan:wght@300;600&display=swap" rel="stylesheet">
</head>

<body>
    <header>
        <nav class="navbar navbar-dark bg-dark fixed-top">
            <div class="container-fluid">
                <img id="logo" src="~/Logos/logo.png" />
                <a id="service" class="navbar-brand" href="@Url.Action("IndexUsuarios", "Servicios")">Service Market</a>
                <h2></h2>
            </div>
        </nav>
    </header>

    <section id="carouselIndex">
        <div id="carouselExampleDark" class="carousel carousel-dark slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="2" aria-label="Slide 3"></button>
                <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="3" aria-label="Slide 4"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active" data-bs-interval="10000">
                    <img src="~/Imagenes/limpiezaCarousel.jpg" class="img-carousel d-block w-100" alt="...">
                    <div class="mensaje-carousel carousel-caption d-md-block">
                        <h5>Servicios de trabajos domésticos</h5>
                        <p>Toda la ayuda doméstica que necesitas en casa con expertas en orden, limpieza y desinfección.</p>
                    </div>
                </div>
                <div class="carousel-item" data-bs-interval="2000">
                    <img src="~/Imagenes/remodelacionCarousel.jpg" class="img-carousel d-block w-100" alt="...">
                    <div class="mensaje-carousel carousel-caption d-md-block">
                        <h5>Servicios de remodelación y albañilería</h5>
                        <p>Orientada en la construcción, renovación y reparación de estructuras, paredes, muros, partes de edificios, casas y más.</p>
                    </div>
                </div>
                <div class="carousel-item" data-bs-interval="2000">
                    <img src="~/Imagenes/mantenimientopcCarousel.jpg" class="img-carousel d-block w-100" alt="...">
                    <div class="mensaje-carousel carousel-caption d-md-block">
                        <h5>Servicios de mantenimiento</h5>
                        <p>Orientada a solucionar y prevenir las posibles averías que pueda haber en equipos, máquinas e instalaciones para conservar y garantizar su óptimo funcionamiento.</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="~/Imagenes/bellezaCarousel.jpg" class="img-carousel d-block w-100" alt="...">
                    <div class="mensaje-carousel carousel-caption d-md-block">
                        <h5>Servicios de salud y belleza</h5>
                        <p>Orientada a la prestación de servicios desde los diferentes campos de la salud y la belleza como lo son cortes, peinados, maquillajes, manicure, pedicura, masajes, etc.</p>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </section>

    <section>
        <h1 class="titulo1">Selecciona tu rol:</h1>
        <div class="d-grid gap-2 d-md-block text-center">
            <a href="@Url.Action("ServiciosDisponiblesCliente", "Servicios")">
                <button class="botonR btn btn-dark" type="button">
                    <img src="~/Imagenes/usuariobtn.png" height="50" width="50">
                    <h1>Cliente</h1>
                    <p>Busca prestadores de servicios para tus necesidades</p>
                </button>
            </a>
            
            <a href="@Url.Action("", "Servicios")">
                <button class="botonR btn btn-dark" type="button">
                    <img src="~/Imagenes/obrerobtn.png" height="50" width="50">
                    <h1>Prestador de servicios</h1>
                    <p>Publica servicios y busca las solicitudes más adecuadas para ti</p>
                </button>
            </a>
            
        </div>
    </section>

    <section>
        <h1 class="titulo">Testimonios</h1>
        <div class="container testimonios">
            <div class="row">
                <div class="col-md-12">
                    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-indicators indicadores">
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                        </div>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="single-box">
                                            <div class="img-area"><img src="~/Imagenes/usuario.png" alt="..."></div>
                                            <div class="informacion-tes img-text">
                                                <h2>Roxana Puerta Rios</h2>
                                                <p>Excelente página, se me hace muy útil a la hora de encontrar servicios.</p>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="single-box">
                                            <div class="img-area"><img src="~/Imagenes/usuario.png" alt="..."></div>
                                            <div class="informacion-tes img-text">
                                                <h2>María Lopez Aguirre</h2>
                                                <p>Solicite un servicio de albañíleria y cumplió con mis expectativas.</p>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="single-box">
                                            <div class="img-area"><img src="~/Imagenes/usuario.png" alt="..."></div>
                                            <div class="informacion-tes img-text">
                                                <h2>Yesica Valencia</h2>
                                                <p>Excelente aplicación da oportunidades a los trabajadores independientes.</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="carousel-item">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="single-box">
                                            <div class="img-area"><img src="~/Imagenes/usuario.png" alt="..."></div>
                                            <div class="informacion-tes img-text">
                                                <h2>Juan Pablo Rodriguez</h2>
                                                <p>Página amigable y fácil de usar para todos los usuarios.</p>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="single-box">
                                            <div class="img-area"> <img src="~/Imagenes/usuario.png" alt="..."></div>
                                            <div class="informacion-tes img-text">
                                                <h2>Paola Rojas Miranda</h2>
                                                <p>Como prestadora de servicios, se me ha facilitado llegar a más usuarios.</p>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="single-box">
                                            <div class="img-area"> <img src="~/Imagenes/usuario.png" alt="..."></div>
                                            <div class="informacion-tes img-text">
                                                <h2>Angela Perez Benito</h2>
                                                <p>Adquirí un servicio de limpieza y dejaron todo impecable, me encanto.</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                            </div>
                            <div class="carousel-item">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="single-box">
                                            <div class="img-area"> <img src="~/Imagenes/usuario.png" alt="..."></div>
                                            <div class="informacion-tes img-text">
                                                <h2>Diego Bolaños Arevalo</h2>
                                                <p>Felicitaciones, totalmente recomendados los servicios.</p>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="single-box">
                                            <div class="img-area"> <img src="~/Imagenes/usuario.png" alt="..."></div>
                                            <div class="informacion-tes img-text">
                                                <h2>Sandra Gómez Bedoya</h2>
                                                <p>La experiencia fue muy buena, el prestador de servicios se mostró muy profesional.</p>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="single-box">
                                            <div class="img-area"> <img src="~/Imagenes/usuario.png" alt="..."></div>
                                            <div class="informacion-tes img-text">
                                                <h2>Carlos Avecedo Henao</h2>
                                                <p>Los prestadores de servicio muestran respeto y compromiso. Excelente experiencia.</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <footer class="bg-dark">
        <div class="text-center">
            <div class="row m-4 p-4">
                <div class="col">
                    <h4 class="link-light">Servicio al cliente</h4>
                    <br />
                    <a href="@Url.Action("PQR", "Servicios")" class="text-decoration-none link-light">Ayuda/PQR</a>
                    <br><br>
                    <a href="@Url.Action("preguntasFrecuentes", "Servicios")" class="text-decoration-none link-light">Preguntas frecuentes</a>
                </div>
                <div class="col">
                    <h4 class="link-light">Acerca de service market</h4>
                    <br />
                    <a href="#" class="text-decoration-none link-light">Terminos y condiciones</a>
                    <br><br><br><br>
                    <h5 class="link-light">Desarrolladoras</h5>
                    <h6 class="link-light">Yesenia Quejada Rojas<br> Valentina Zapata Flórez</h6>
                </div>
                <div class="col">
                    <h4 class="link-light">Síguenos</h4>
                    <br />
                    <a href="#" class="text-decoration-none link-light"><img src="~/Imagenes/facebook.png" alt="" width="40"> Facebook</a>
                    <br><br>
                    <a href="#" class="text-decoration-none link-light"><img src="~/Imagenes/instagram.png" alt="" width="40"> Instagram</a>
                    <br><br>
                    <a href="#" class="text-decoration-none link-light"><img src="~/Imagenes/gorjeo.png" alt="" width="40"> Twitter</a>
                </div>
            </div>
        </div>
        <br><br>
        <p class="link-light text-center">&copy; @DateTime.Now.Year - Service Market</p>
        <br><br>
    </footer>

    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>