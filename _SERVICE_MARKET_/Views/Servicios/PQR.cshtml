
@{
    ViewBag.Title = "PQR";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Service Market</title>
    <link rel="shortcut icon" href="~/Logos/logo.png" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Css/PQR.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=League+Spartan:wght@300;600&display=swap" rel="stylesheet">
</head>

<body>
    <header>
        <nav class="navbar navbar-dark bg-dark fixed-top">
            <div class="container-fluid">
                <img id="logo" src="~/Logos/logo.png" />
                <a id="service" class="navbar-brand" href="@Url.Action("IndexUsuarios", "Servicios")">Service Market</a>
                <h2></h2>
            </div>
        </nav>
    </header>

    <main>
        <section class="pqr bg-dark">
            <h1 id="titulo">Preguntas, quejas y reclamos.</h1>
            <form class="formulario">
                <div class="container">
                    <input type="text" class="form-control" placeholder="Ingresa tu nombre completo" required>

                    <select class="form-select" required>
                        <option selected disabled value="">Tipo de documento</option>
                        <option>Cédula de ciudadanía</option>
                        <option>Cédula de extranjería</option>
                        <option>Pasaporte</option>
                    </select>

                    <input type="text" class="form-control" placeholder="Ingresa tu número de documento" required>

                    <input type="text" class="form-control" placeholder="¿A qué correo electrónico podemos comunicarnos?" required>

                    <input type="text" class="form-control" placeholder="Ingresa tu número de celular" required>

                    <select class="form-select" required>
                        <option selected disabled value="">¿Qué tipo de solicitud vas a radicar?</option>
                        <option>Petición</option>
                        <option>Queja</option>
                        <option>sugerencia</option>
                        <option>Felicitación</option>
                    </select>

                    <textarea class="text-area form-control" placeholder="Escriba su solicitud"></textarea>

                    <div class="botones d-grid gap-2 col-6 mx-auto">
                        <button class="btn btn-primary" type="submit">Enviar</button>
                        <a href="@Url.Action("Index", "Home")" class="volver btn btn-outline-light">Volver al inicio</a>
                    </div>
                </div>
            </form>
        </section>
    </main>

    <footer class="bg-dark">
        <div class="text-center">
            <div class="row m-4 p-4">
                <div class="col">
                    <h4 class="link-light">Servicio al cliente</h4>
                    <br />
                    <a href="@Url.Action("PQR", "Servicios")" class="text-decoration-none link-light">Ayuda/PQR</a>
                    <br><br>
                    <a href="@Url.Action("preguntasFrecuentes", "Servicios")" class="text-decoration-none link-light">Preguntas frecuentes</a>
                </div>
                <div class="col">
                    <h4 class="link-light">Acerca de service market</h4>
                    <br />
                    <a href="#" class="text-decoration-none link-light">Terminos y condiciones</a>
                    <br><br><br><br>
                    <h5 class="link-light">Desarrolladoras</h5>
                    <h6 class="link-light">Yesenia Quejada Rojas<br> Valentina Zapata Flórez</h6>
                </div>
                <div class="col">
                    <h4 class="link-light">Síguenos</h4>
                    <br />
                    <a href="#" class="text-decoration-none link-light"><img src="~/Imagenes/facebook.png" alt="" width="40"> Facebook</a>
                    <br><br>
                    <a href="#" class="text-decoration-none link-light"><img src="~/Imagenes/instagram.png" alt="" width="40"> Instagram</a>
                    <br><br>
                    <a href="#" class="text-decoration-none link-light"><img src="~/Imagenes/gorjeo.png" alt="" width="40"> Twitter</a>
                </div>
            </div>
        </div>
        <br><br>
        <p class="link-light text-center">&copy; @DateTime.Now.Year - Service Market</p>
        <br><br>
    </footer>

    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>

