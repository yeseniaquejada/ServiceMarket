@model IEnumerable<_SERVICE_MARKET_.Models.Servicio>

@{
    ViewBag.Title = "Página principal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Service Market</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Css/Index.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=League+Spartan:wght@300;600&display=swap" rel="stylesheet">
</head>
<body>
    <section id="carouselIndex">
        <div id="carouselExampleDark" class="carousel carousel-dark slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="2" aria-label="Slide 3"></button>
                <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="3" aria-label="Slide 4"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active" data-bs-interval="10000">
                    <img src="~/Imagenes/limpiezaCarousel.jpg" class="img-carousel d-block w-100" alt="...">
                    <div class="mensaje-carousel carousel-caption d-md-block">
                        <h5>Servicios de trabajos domésticos</h5>
                        <!--<p>Toda la ayuda doméstica que necesitas en casa con expertas en orden, limpieza y desinfección.</p>-->
                    </div>
                </div>
                <div class="carousel-item" data-bs-interval="2000">
                    <img src="~/Imagenes/remodelacionCarousel.jpg" class="img-carousel d-block w-100" alt="...">
                    <div class="mensaje-carousel carousel-caption d-md-block">
                        <h5>Servicios de remodelación y albañilería</h5>
                        <!--<p>Orientada en la construcción, renovación y reparación de estructuras, paredes, muros, partes de edificios, casas y más.</p>-->
                    </div>
                    </div>
                    <div class="carousel-item" data-bs-interval="2000">
                        <img src="~/Imagenes/mantenimientopcCarousel.jpg" class="img-carousel d-block w-100" alt="...">
                        <div class="mensaje-carousel carousel-caption d-md-block">
                            <h5>Servicios de mantenimiento</h5>
                            <!--<p>Orientada a solucionar y prevenir las posibles averías que pueda haber en equipos, máquinas e instalaciones para conservar y garantizar su óptimo funcionamiento.</p>-->
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="~/Imagenes/bellezaCarousel.jpg" class="img-carousel d-block w-100" alt="...">
                        <div class="mensaje-carousel carousel-caption d-md-block">
                            <h5>Servicios de salud y belleza</h5>
                            <!--<p>Orientada a la prestación de servicios desde los diferentes campos de la salud y la belleza como lo son cortes, peinados, maquillajes, manicure, pedicura, masajes, etc.</p>-->
                        </div>
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </section>

            <section>
            <h1 class="titulo">Servicios Disponibles</h1>
            <div class="container">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4">
                            <div class="card-servicios card text-light bg-dark drop" style="width: 22rem;">
                                <div class="card-body info">
                                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.NOMBRE_SER)</h5>
                                    <p class="card-text">@Html.DisplayFor(modelItem => item.DESCRIPCION_BREVE)</p>
                                    <h4 class="card-title">$ @Html.DisplayFor(modelItem => item.PRECIO_SER)</h4>
                                    <h6 class="card-title">@Html.DisplayFor(modelItem => item.NOMBRE_CAT)</h6>
                                </div>
                                <div class="botonInfo">
                                    <button onclick="masInformacion()" type="button" class="btn btn-primary">Más información</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </section>

        <section>
            <h1 class="titulo">Categorías</h1>
            <div id="carouselExampleControls" class="carousel carousel-dark slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <div class="cards-wrapper carousel-categorias">

                            <div class="card-categorias card text-light bg-dark drop">
                                <div class="cards-wrapper">
                                    <img src="~/Imagenes/albañileria.jpeg" class="card-img-top" alt="albañileria">
                                </div>
                                <div class="informacion-card card-body text-center">
                                    <h5 class="card-title">Albañilería</h5>
                                    <p class="card-text">Enfocada en construir y reparar estructuras, paredes, muros, partes de edificios, casas y más.</p> <br>
                                    <button class="btn btn-primary">
                                        <a href="#">Más información</a>
                                    </button>
                                </div>
                            </div>

                            <div class="card-categorias card text-light bg-dark drop">
                                <img src="~/Imagenes/mantenimiento.jpg" class="card-img-top" alt="belleza">
                                <div class="informacion-card card-body text-center">
                                    <h5 class="card-title">Mantenimiento</h5>
                                    <p class="card-text">Solucionar y prevenir las posibles averías que pueda haber en equipos, máquinas e instalaciones.</p> <br>
                                    <button class="btn btn-primary">
                                        <a href="#">Más información</a>
                                    </button>
                                </div>
                            </div>

                            <div class="card-categorias card text-light bg-dark drop">
                                <img src="~/Imagenes/remodelación.jpg" class="card-img-top" alt="remodelación">
                                <div class="informacion-card card-body text-center">
                                    <h5 class="card-title">Remodelación</h5>
                                    <p class="card-text">Renovación de los diversos espacios en los cuales se requiera del servicio.</p> <br>
                                    <button class="btn btn-primary">
                                        <a href="#">Más información</a>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="carousel-item">
                        <div class="cards-wrapper carousel-categorias">
                            <div class="card-categorias card text-light bg-dark drop">
                                <img src="~/Imagenes/belleza.jpg" class="card-img-top" alt="mantenimiento">
                                <div class="informacion-card card-body text-center">
                                    <h5 class="card-title">Belleza</h5>
                                    <p class="card-text">Servicios enfocados en cortes, peinados, maquillajes, manicure, pedicura, masajes, etc.</p> <br>
                                    <button class="btn btn-primary">
                                        <a href="#">Más información</a>
                                    </button>
                                </div>
                            </div>

                            <div class="card-categorias card text-light bg-dark drop">
                                <img src="~/Imagenes/salud.jpg" class="card-img-top" alt="belleza">
                                <div class="informacion-card card-body text-center">
                                    <h5 class="card-title">Salud</h5>
                                    <p class="card-text">Prestación de servicios desde los diferentes campos de la salud.</p> <br>
                                    <button class="btn btn-primary">
                                        <a href="#">Más información</a>
                                    </button>
                                </div>
                            </div>

                            <div class="card-categorias card text-light bg-dark drop">
                                <img src="~/Imagenes/trabajo-domestico.jpg" class="card-img-top" alt="trabajo-domestico">
                                <div class="informacion-card card-body text-center">
                                    <h5 class="card-title">Trabajos domésticos</h5>
                                    <p class="card-text">Toda la ayuda doméstica que necesitas en casa con expertas en orden, limpieza y desinfección.</p> <br>
                                    <button class="btn btn-primary">
                                        <a href="#">Más información</a>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </section>

        <section>
            <h1 class="titulo">Testimonios</h1>
            <div class="container testimonios">
                <div class="row">
                    <div class="col-md-12">
                        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-indicators indicadores">
                                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                            </div>
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="single-box">
                                                <div class="img-area"><img src="~/Imagenes/usuario.png" alt="..."></div>
                                                <div class="informacion-tes img-text">
                                                    <h2>Roxana Puerta Rios</h2>
                                                    <p>Excelente página, se me hace muy útil a la hora de encontrar servicios.</p>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-md-4">
                                            <div class="single-box">
                                                <div class="img-area"><img src="~/Imagenes/usuario.png" alt="..."></div>
                                                <div class="informacion-tes img-text">
                                                    <h2>María Lopez Aguirre</h2>
                                                    <p>Solicite un servicio de albañíleria y cumplió con mis expectativas.</p>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-md-4">
                                            <div class="single-box">
                                                <div class="img-area"><img src="~/Imagenes/usuario.png" alt="..."></div>
                                                <div class="informacion-tes img-text">
                                                    <h2>Yesica Valencia</h2>
                                                    <p>Excelente aplicación da oportunidades a los trabajadores independientes.</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="carousel-item">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="single-box">
                                                <div class="img-area"><img src="~/Imagenes/usuario.png" alt="..."></div>
                                                <div class="informacion-tes img-text">
                                                    <h2>Juan Pablo Rodriguez</h2>
                                                    <p>Página amigable y fácil de usar para todos los usuarios.</p>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-md-4">
                                            <div class="single-box">
                                                <div class="img-area"> <img src="~/Imagenes/usuario.png" alt="..."></div>
                                                <div class="informacion-tes img-text">
                                                    <h2>Paola Rojas Miranda</h2>
                                                    <p>Como prestadora de servicios, se me ha facilitado llegar a más usuarios.</p>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-md-4">
                                            <div class="single-box">
                                                <div class="img-area"> <img src="~/Imagenes/usuario.png" alt="..."></div>
                                                <div class="informacion-tes img-text">
                                                    <h2>Angela Perez Benito</h2>
                                                    <p>Adquirí un servicio de limpieza y dejaron todo impecable, me encanto.</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>


                                </div>
                                <div class="carousel-item">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="single-box">
                                                <div class="img-area"> <img src="~/Imagenes/usuario.png" alt="..."></div>
                                                <div class="informacion-tes img-text">
                                                    <h2>Diego Bolaños Arevalo</h2>
                                                    <p>Felicitaciones, totalmente recomendados los servicios.</p>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-md-4">
                                            <div class="single-box">
                                                <div class="img-area"> <img src="~/Imagenes/usuario.png" alt="..."></div>
                                                <div class="informacion-tes img-text">
                                                    <h2>Sandra Gómez Bedoya</h2>
                                                    <p>La experiencia fue muy buena, el prestador de servicios se mostró muy profesional.</p>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-md-4">
                                            <div class="single-box">
                                                <div class="img-area"> <img src="~/Imagenes/usuario.png" alt="..."></div>
                                                <div class="informacion-tes img-text">
                                                    <h2>Carlos Avecedo Henao</h2>
                                                    <p>Los prestadores de servicio muestran respeto y compromiso. Excelente experiencia.</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <script>
            function masInformacion() {
                swal({
                    icon: "info",
                    title: "Más informacion del servicio",
                    text: "Para visualizar más información, registrate o ingresa a tu cuenta por medio del menú de navegación.",
                    button: "Ok",
                    closeOnClickOutside: false,
                    closeOnEsc: false,
                });
            }
        </script>

        <script src="~/Scripts/sweetalert.min.js"></script>
        <script src="~/Scripts/bootstrap.bundle.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
    </body>
    </html>

